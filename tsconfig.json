{
    "compilerOptions": {
        "plugins": [],
        "declaration": true,
        "declarationDir": "dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": false,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "rootDirs": ["/"],
        "baseUrl": "./",
        "outDir": "dist"
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "webapps-common", "dist"]
}
