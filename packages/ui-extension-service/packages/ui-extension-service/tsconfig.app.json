{
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["DOM"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "noEmit": true,
    "verbatimModuleSyntax": false
  }
}
