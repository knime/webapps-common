{
  "name": "@knime/root",
  "version": "1.0.0",
  "description": "tbd.",
  "homepage": "https://knime.github.io/webapps-common/",
  "license": "GPL 3 and Additional Permissions according to Sec. 7 (SEE LICENSE IN license.txt)",
  "author": "KNIME AG, Zurich, Switzerland",
  "type": "module",
  "scripts": {
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "build:packages": "pnpm run build:styles",
    "build:styles": "pnpm --filter @knime/styles build",
    "test:unit-components": "pnpm --filter @knime/components test:unit",
    "test:unit-ui-extensions-renderer": "pnpm --filter @knime/ui-extensions-renderer test:unit",
    "changeset": "npx changeset",
    "changeset:version": "npx changeset version",
    "changeset:publish": "npx changeset publish",
    "publish": "pnpm run build:packages && pnpm run changeset:publish",
    "audit": "pnpm audit --prod"
  },
  "engines": {
    "node": "18.x - 20.x"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@knime/eslint-config": "workspace:*",
    "@tsconfig/node20": "^20.1.4",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "8.56.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.1",
    "stylelint": "16.6.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "postcss"
      ]
    }
  },
  "volta": {
    "node": "20.11.0",
    "pnpm": "9.1.4"
  },
  "dependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.9",
    "vue-tsc": "^2.0.24"
  }
}
